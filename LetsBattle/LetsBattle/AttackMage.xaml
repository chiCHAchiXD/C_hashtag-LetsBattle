<Window x:Class="LetsBattle.AttackMage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LetsBattle"
        mc:Ignorable="d"
        Title="AttackMage" Height="300" Width="300"
        ResizeMode="NoResize">
    <Grid>
        <Button x:Name="B_attack_iceball" Content="IceBall" HorizontalAlignment="Left" Margin="10,53,0,0" VerticalAlignment="Top" Width="130" Click="B_attack_iceball_Click"/>
        <Button x:Name="B_attack_fireball" Content="FireBall" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top" Width="130" Click="B_attack_fireball_Click"/>

    </Grid>
</Window>
